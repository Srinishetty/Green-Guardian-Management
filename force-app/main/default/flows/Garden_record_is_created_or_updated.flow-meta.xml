                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.CAMPX__Total_Plant_Count__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.CAMPX__Total_Plant_Count__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.CAMPX__Max_Plant_Count__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.CAMPX__Max_Plant_Count__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CAMPX__Total_Unhealthy_Plant_Count__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.CAMPX__Total_Unhealthy_Plant_Count__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.CAMPX__Total_Unhealthy_Plant_Count__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_capacity_when_plant_count_updated</targetReference>
            </connector>
            <label>If Plant count update</label>
