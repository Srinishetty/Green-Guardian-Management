            <conditionLogic>((1 AND 3) OR (6 AND 7) ) OR  (2 AND 4) AND 5</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CAMPX__Total_Plant_Count__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
