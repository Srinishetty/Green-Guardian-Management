    <formulas>
        <name>HealthIndex</name>
        <dataType>Number</dataType>
        <expression>IF({!$Record.CAMPX__Total_Plant_Count__c}&gt;0, (({!$Record.CAMPX__Total_Plant_Count__c}-{!$Record.CAMPX__Total_Unhealthy_Plant_Count__c})/{!$Record.CAMPX__Total_Plant_Count__c})*100, 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Totalcapacity</name>
        <dataType>Number</dataType>
        <expression>IF(({!$Record.CAMPX__Total_Plant_Count__c}&gt;0), IF({!$Record.CAMPX__Max_Plant_Count__c}&gt;0, ({!$Record.CAMPX__Total_Plant_Count__c}/{!$Record.CAMPX__Max_Plant_Count__c})*100, 0), 0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>updateStatus</name>
        <dataType>String</dataType>
        <expression>IF(ISPICKVAL({!$Record.CAMPX__Status__c}, &apos;Permanent Closure&apos;), TEXT({!$Record.CAMPX__Status__c}), 
IF({!$Record.CAMPX__Capacity__c} == 0, &apos;Temporary Closure&apos;, 
IF({!$Record.CAMPX__Capacity__c}&gt;100, &apos;Over Capacity&apos;,
IF({!$Record.CAMPX__Capacity__c}&lt;100 &amp;&amp; {!$Record.CAMPX__Capacity__c}&gt;70 &amp;&amp; {!$Record.CAMPX__Total_Plant_Count__c}&gt;={!$Record.CAMPX__Minimum_Plant_Count__c} &amp;&amp; {!$Record.CAMPX__Health_Index__c}&gt;=70,&apos;Operational&apos;,
IF(({!$Record.CAMPX__Capacity__c} &lt; 70 || {!$Record.CAMPX__Health_Index__c} &lt; 70 ||{!$Record.CAMPX__Minimum_Plant_Count__c} &gt; {!$Record.CAMPX__Total_Plant_Count__c}),&apos;Awaiting Resources&apos;, TEXT({!$Record.CAMPX__Status__c}))))))</expression>
    </formulas>
